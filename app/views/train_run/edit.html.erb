<% if flash.now[:notice]=="failure" %>
    <div class="alert alert-danger">  Error.  Make sure all fields are entered. </div>
<% end %>
<div class="container" >
<div class="starter-template" >
<h1>Edit Train Run</h1>
 
<%= form_for :train_run, url: train_run_path(@train_run), method: :patch do |f| %>
    <% if @train_run.errors.any? %>
        <div id="error_explanation">
          <h4><%= pluralize(@train_run.errors.count, "error") %> prevented this entry from being saved:</h4>
          <ul>
            <% @train_run.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <p>
    <%= f.label :train_line, "Train Line" %><br>
    <%= f.text_area :train_line %>
  </p>
 
  <p>
    <%= f.label :route %><br>
    <%= f.text_area :route %>
  </p>
 
 <p>
    <%= f.label :run_number, "Run Number" %><br>
    <%= f.text_area :run_number %>
  </p>

  <p>
    <%= f.label :operator_id, "Operator ID" %><br>
    <%= f.text_area :operator_id %>
  </p>

  <p>
    <%= f.submit "Save Train Run"%>
  </p>
<% end %>
 
<%= link_to 'Back', train_run_index_path %>
</div>
</div>